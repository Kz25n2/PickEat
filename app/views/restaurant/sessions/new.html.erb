<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4">店舗ログイン</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%# メールアドレス %>
            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
                <%= f.email_field :email, 
                    class: "form-control",
                    placeholder: "restaurant@example.com",
                    autofocus: true, 
                    autocomplete: "email" %>
              </div>
            </div>

            <%# パスワード %>
            <div class="mb-3">
              <%= f.label :password, "パスワード", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
                <%= f.password_field :password, 
                    class: "form-control",
                    placeholder: "パスワードを入力",
                    autocomplete: "current-password" %>
              </div>
            </div>

            <%# ログイン情報を記憶する %>
            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "ログイン情報を記憶する", class: "form-check-label" %>
              </div>
            <% end %>

            <%# ログインボタン %>
            <div class="d-grid gap-2 mb-4">
              <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <%# 新規登録リンク %>
          <div class="text-center mb-3">
            <p class="mb-1">店舗登録がまだの方は</p>
            <%= link_to "こちら", new_restaurant_registration_path, 
                class: "btn btn-outline-primary",
                data: {"turbolinks" => false} %>
            <p class="mt-1">から新規登録できます</p>
          </div>

          <%# その他のリンク %>
          <div class="text-center">
            <%= render "restaurant/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>