<h2>会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
  <%= render 'layouts/errors', obj: @customer %>
  
  <div class="field">
    <span>名前</span>
    <%= f.label :last_name, "姓" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.label :first_name, "名" %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>


  <div class="field">
    <span>フリガナ</span>
    <%= f.label :last_name_kana, "セイ" %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.label :first_name_kana, "メイ" %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %>
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :is_active, "ステータス" %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, "無効" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する", class:"btn btn-success" %>
  </div>

<% end %>