<h2>会員一覧</h2>


<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th>電話番号</th>
      <th>登録日</th>
      <th>ステータス</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.nickname %></td>
        <td><%= customer.email %></td>
        <td><%= customer.telephone_number %></td>
        <td><%= customer.created_at %></td>
        <% if customer.is_active == true %>
          <td class="text-success">有効</td>
        <% else %>
          <td class="text-secondary">無効</td>
        <% end %>
        <td><%= link_to '編集', edit_admin_customer_path(customer) %></td>
        <td><%= link_to '削除', admin_customer_path(customer), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
