<h2>レビュー一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>投稿者</th>
      <th>店舗</th>
      <th>レビュー</th>
      <th>投稿日</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
    <tr>
      <td>
        <%= link_to admin_customer_path(review.customer), style: "color: #000; text-decoration: underline;" do %>
          <%= review.customer.nickname %>
        <% end %>
      </td>
      <td>
        <%= link_to admin_restaurant_path(review.restaurant), style: "color: #000; text-decoration: underline;" do %>
          <%= review.restaurant.name %>
        <% end %>
      </td>
      <td>
        <%= review.body %>
      </td>
      <td>
        <%= review.created_at.strftime("%Y-%m-%d") %>
      </td>
      <td>
        <%= link_to "削除", admin_review_path(review), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>