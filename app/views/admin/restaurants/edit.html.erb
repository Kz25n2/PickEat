<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4">店舗情報編集</h2>

          <%= render 'layouts/errors', obj: @restaurant %>

          <%= form_with model: @restaurant, url: admin_restaurant_path(@restaurant), method: :patch, local: true do |f| %>
            <%# 基本情報 %>
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0">基本情報</h5>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <%= f.label :name, "店舗名", class: "form-label" %>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-store"></i></span>
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                </div>

                <div class="mb-3">
                  <%= f.label :genre_id, "ジャンル", class: "form-label" %>
                  <%= f.collection_select :genre_id, Genre.all, :id, :name, 
                      { prompt: "選択してください" }, 
                      { class: "form-select" } %>
                </div>

                <div class="mb-3">
                  <%= f.label :email, "メールアドレス", class: "form-label" %>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <%= f.email_field :email, class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>

            <%# 住所・連絡先 %>
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0">住所・連絡先</h5>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "form-label" %>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                    <%= f.text_field :postal_code, class: "form-control" %>
                  </div>
                </div>

                <div class="mb-3">
                  <%= f.label :address, "住所", class: "form-label" %>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-home"></i></span>
                    <%= f.text_field :address, class: "form-control" %>
                  </div>
                </div>

                <div class="mb-3">
                  <%= f.label :contact_number, "電話番号", class: "form-label" %>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                    <%= f.text_field :contact_number, class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>

            <%# 営業情報 %>
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0">営業情報</h5>
              </div>
              <div class="card-body">
                <div class="row g-3">
                  <div class="col-md-6">
                    <%= f.label :business_open_hours, "営業開始時間", class: "form-label" %>
                    <%= f.text_field :business_open_hours, class: "form-control" %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :business_close_hours, "営業終了時間", class: "form-label" %>
                    <%= f.text_field :business_close_hours, class: "form-control" %>
                  </div>
                </div>

                <div class="row g-3 mt-2">
                  <div class="col-md-6">
                    <%= f.label :min_price, "最小価格", class: "form-label" %>
                    <div class="input-group">
                      <%= f.text_field :min_price, class: "form-control" %>
                      <span class="input-group-text">円</span>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :max_price, "最大価格", class: "form-label" %>
                    <div class="input-group">
                      <%= f.text_field :max_price, class: "form-control" %>
                      <span class="input-group-text">円</span>
                    </div>
                  </div>
                </div>

                <div class="mb-3 mt-3">
                  <%= f.label :capacity, "収容人数", class: "form-label" %>
                  <div class="input-group">
                    <%= f.text_field :capacity, class: "form-control" %>
                    <span class="input-group-text">人</span>
                  </div>
                </div>

                <div class="mb-3">
                  <%= f.label :parking_lot, "駐車場", class: "form-label d-block" %>
                  <div class="btn-group" role="group">
                    <%= f.radio_button :parking_lot, true, id: "parking_yes", 
                        class: "btn-check" %>
                    <%= f.label :parking_lot_yes, "有", for: "parking_yes", 
                        class: "btn btn-outline-primary" %>
                    
                    <%= f.radio_button :parking_lot, false, id: "parking_no", 
                        class: "btn-check" %>
                    <%= f.label :parking_lot_no, "無", for: "parking_no", 
                        class: "btn btn-outline-primary" %>
                  </div>
                </div>

                <div id="parking_capacity_field" class="mb-3" style="display: none;">
                  <%= f.label :parking_spaces, "駐車可能台数", class: "form-label" %>
                  <div class="input-group">
                    <%= f.text_field :parking_spaces, class: "form-control" %>
                    <span class="input-group-text">台</span>
                  </div>
                </div>
              </div>
            </div>

            <%# 更新ボタン %>
            <div class="d-grid gap-2">
              <%= f.submit "更新する", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>