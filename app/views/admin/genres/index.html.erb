<h2>ジャンル一覧・作成</h2>

<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit "作成" %>
<% end %>

<% @genres.each do |genre| %>
  <p><%= genre.name %></p>
  <%= link_to '編集', edit_admin_genre_path(genre) %>
  <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' } %>
<% end %>