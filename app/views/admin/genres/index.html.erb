<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card shadow">
        <div class="card-body">
          <h4 class="card-title text-center mb-4">ジャンル一覧・作成</h4>

          <div class="card mb-3">
            <div class="card-body p-4">
              <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
              <%= render "layouts/errors", obj: @genre %>
                <div class="input-group mb-3">
                  <span class="input-group-text"><%= f.label :name, "ジャンル名" %></span>
                  <%= f.text_field :name, class: "form-control" %>
                </div>
                <div class="d-grid gap-2 mb-4">
                <%= f.submit "作成", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="table-resposive">
                <table class="table w-75 mx-auto">
                  <thead>
                    <tr>
                      <th>ジャンル名</th>
                      <th>編集</th>
                      <th>削除</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @genres.each do |genre| %>
                      <tr>
                        <td><%= genre.name %></td>
                        <td><%= link_to '編集', edit_admin_genre_path(genre) %></td>
                        <td><%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
