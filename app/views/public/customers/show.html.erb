<% if @customer == current_customer %>
  <h2>マイページ</h2>

  <table class="table table-bordered">
    <tr>
      <th class="col-3">名前</th>
      <td class="col-9"><%= @customer.last_name %>　<%= @customer.first_name %></td>
    </tr>
    <tr>
      <th class="col-3">フリガナ</th>
      <td class="col-9"><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th class="col-3">ニックネーム</th>
      <td class="col-9"><%= @customer.nickname %></td>
    </tr>
    <tr>
      <th class="col-3">メールアドレス</th>
      <td class="col-9"><%= @customer.email %></td>
    </tr>
    <tr>
      <th class="col-3">電話番号</th>
      <td class="col-9"><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th class="col-3">郵便番号</th>
      <td class="col-9"><%= @customer.formatted_postal_code %></td>
    </tr>
    <tr>
      <th class="col-3">住所</th>
      <td class="col-9"><%= @customer.address %></td>
    </tr>
  </table>
  <%= link_to '編集', edit_customer_path(@customer), class: 'btn btn-primary' %>
  <%= link_to '退会', customer_customers_unsubscribe_path(@customer), class: 'btn btn-danger' %>
  <h4 class="mt-3">投稿したレビュー一覧</h4>
  <%= render 'public/reviews/index', reviews: @reviews %>
<% else %>
  <h2><%= @customer.nickname %>さんが投稿したレビュー一覧</h2>
  <%= render 'public/reviews/index', reviews: @reviews %>
<% end %>