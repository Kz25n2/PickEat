<% if @customer == current_customer %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        <div class="card shadow mb-4">

          <div class="card-header bg-light">
            <h4 class="mb-0">マイページ</h4>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <table class="table">
                <tbody>
                  <tr>
                    <th class="bg-light w-25">名前</th>
                    <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
                  </tr>
                  <tr>
                    <th class="bg-light w-25">フリガナ</th>
                    <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
                  </tr>
                  <tr>
                    <th class="bg-light w-25">ニックネーム</th>
                    <td><%= @customer.nickname %></td>
                  </tr>
                  <tr>
                    <th class="bg-light w-25">メールアドレス</th>
                    <td><%= @customer.email %></td>
                  </tr>
                  <tr>
                    <th class="bg-light w-25">電話番号</th>
                    <td><%= @customer.telephone_number %></td>
                  </tr>
                  <tr>
                    <th class="bg-light w-25">郵便番号</th>
                    <td><%= @customer.formatted_postal_code %></td>
                  </tr>
                  <tr>
                    <th class="bg-light w-25">住所</th>
                    <td><%= @customer.address %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <div class="my-4 d-flex gap-2 justify-content-center">
            <%= link_to edit_customer_path(@customer), class: "btn btn-primary",data: { "turbolinks" => false } do %>
              <i class="fas fa-edit"></i> 編集
            <% end %>
            
            <%= link_to customers_unsubscribe_customer_path(@customer), class: "btn btn-outline-danger" do %>
              <i class="fas fa-user-times"></i> 退会
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>


  <h4 class="mt-3 bg-light">投稿したレビュー一覧</h4>
  <%= render 'public/reviews/index', reviews: @reviews %>
<% else %>
  <h2 class="mt-3 bg-light"><%= @customer.nickname %>さんが投稿したレビュー一覧</h2>
  <%= render 'public/reviews/index', reviews: @reviews %>
<% end %>