<h2>レビュー投稿</h2>

<%= render 'layouts/errors', obj: @review %>

<%= form_with model: @review, url: restaurant_reviews_path(@restaurant), local: true do |f| %>
  <div class="field">
    <%= f.label :body, "レビュー" %>
    <%= f.text_area :body, placeholder: "ここにレビューを記載してください", class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "投稿", class: "btn btn-primary" %>
  </div>
<% end %>