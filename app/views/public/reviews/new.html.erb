<div class="container"></div>
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4">レビュー投稿</h2>
          <%= render 'layouts/errors', obj: @review %>
          <%= form_with model: @review, url: restaurant_reviews_path(@restaurant), local: true do |f| %>
            <div class="field">
              <%= f.text_area :body, placeholder: "ここにレビューを記載してください", class: "form-control mb-3" %>
            </div>
            <div class="actions">
              <%= f.submit "投稿", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>