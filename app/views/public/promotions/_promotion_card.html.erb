<div class="card shadow-sm h-100">
  <div class="card-body d-flex flex-column">
    <%# 店舗名 %>
    <h5 class="card-title">
      <%= link_to restaurant_path(promotion.restaurant), 
          class: "text-dark text-decoration-none" do %>
        <%= promotion.restaurant.name %>
      <% end %>
    </h5>

    <%# プロモーション内容 %>
    <div class="card-text flex-grow-1">
      <div class="promotion-title mb-2">
        <strong><%= promotion.name %></strong>
      </div>
      <p class="promotion-body mb-3">
        <%= promotion.body %>
      </p>
      <p class="text-muted mb-2">
        <small>
          <i class="fas fa-utensils me-1"></i><%= promotion.restaurant.genre.name %><br>
          <i class="fas fa-map-marker-alt me-1"></i><%= promotion.restaurant.address %><br>
          <i class="fas fa-clock me-1"></i>
          <%= promotion.restaurant.business_open_hours %>〜<%= promotion.restaurant.business_close_hours %>
        </small>
      </p>
    </div>

    <%# フッター情報 %>
    <div class="mt-auto">
      <div class="d-flex justify-content-between align-items-center">
        <span class="badge bg-info me-1">
          ¥<%= promotion.restaurant.min_price %>〜<%= promotion.restaurant.max_price %>
        </span>
        <small class="text-muted">
          残り <%= distance_of_time_in_words(Time.current, promotion.created_at + 2.hours) %>
        </small>
      </div>
    </div>
  </div>
</div>

<% content_for :css do %>
<style>
  .card {
    height: 100%;
  }
  
  .card-body {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .promotion-title {
    font-size: 1.1rem;
    color: #2c3e50;
  }
  
  .promotion-body {
    color: #34495e;
    font-size: 0.95rem;
  }
  
  .card-text {
    flex-grow: 1;
  }
</style>
<% end %>