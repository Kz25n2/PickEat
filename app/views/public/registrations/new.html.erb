<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4">新規会員登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>

            <%# 名前 %>
            <div class="row g-3 mb-3">
              <div class="col-12">
                <label class="form-label fw-bold">お名前</label>
              </div>
              <div class="col-sm-6">
                <%= f.label :last_name, "姓", class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control", placeholder: "山田" %>
              </div>
              <div class="col-sm-6">
                <%= f.label :first_name, "名", class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control", placeholder: "太郎" %>
              </div>
            </div>

            <%# フリガナ %>
            <div class="row g-3 mb-3">
              <div class="col-12">
                <label class="form-label fw-bold">フリガナ</label>
              </div>
              <div class="col-sm-6">
                <%= f.label :last_name_kana, "セイ", class: "form-label" %>
                <%= f.text_field :last_name_kana, class: "form-control", placeholder: "ヤマダ" %>
              </div>
              <div class="col-sm-6">
                <%= f.label :first_name_kana, "メイ", class: "form-label" %>
                <%= f.text_field :first_name_kana, class: "form-control", placeholder: "タロウ" %>
              </div>
            </div>

            <%# ニックネーム %>
            <div class="mb-3">
              <%= f.label :nickname, "ニックネーム", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <%= f.text_field :nickname, class: "form-control", placeholder: "表示される名前" %>
              </div>
            </div>

            <%# メールアドレス %>
            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <%= f.email_field :email, class: "form-control", 
                    placeholder: "example@email.com", 
                    autocomplete: "email" %>
              </div>
            </div>

            <%# 電話番号 %>
            <div class="mb-3">
              <%= f.label :telephone_number, "電話番号（ハイフンなし）", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                <%= f.text_field :telephone_number, class: "form-control", 
                    placeholder: "09012345678" %>
              </div>
            </div>

            <%# 住所情報 %>
            <div class="card mb-3">
              <div class="card-header bg-light">
                <h5 class="mb-0">住所情報</h5>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "form-label" %>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                    <%= f.text_field :postal_code, class: "form-control", 
                        placeholder: "1234567" %>
                  </div>
                </div>

                <div class="mb-3">
                  <%= f.label :address, "住所", class: "form-label" %>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-home"></i></span>
                    <%= f.text_field :address, class: "form-control", 
                        placeholder: "東京都渋谷区代々木神園町0-0" %>
                  </div>
                </div>
              </div>
            </div>

            <%# パスワード %>
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0">パスワード設定</h5>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <%= f.label :password, "パスワード（6文字以上）", class: "form-label" %>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <%= f.password_field :password, class: "form-control", 
                        autocomplete: "new-password" %>
                  </div>
                </div>

                <div class="mb-3">
                  <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <%= f.password_field :password_confirmation, class: "form-control", 
                        autocomplete: "new-password" %>
                  </div>
                </div>
              </div>
            </div>

            <%# 登録ボタン %>
            <div class="d-grid gap-2">
              <%= f.submit "会員登録", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <%# その他のリンク %>
          <div class="mt-4 text-center">
            <%= render "public/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>