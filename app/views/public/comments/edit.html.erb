<h2>コメント編集</h2>

<%= render 'layouts/errors', obj: @comment %>
<%= form_with model: [@restaurant, @review, @comment], local: true do |f| %>
  <div class="form-group">
    <%= f.label :body, "コメント", class:"mb-2" %>
    <%= f.text_area :body, rows: 4, class: "form-control w-50", placeholder: "レビューに対するコメントを入力してください" %>
  </div>
  <%= f.submit 'コメントを更新', class: "btn btn-primary mt-2" %>
<% end %>