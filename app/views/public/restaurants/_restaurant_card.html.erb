<div class="card shadow-sm h-100">
  <div class="card-body d-flex flex-column">
    <h5 class="card-title">
      <%= link_to restaurant.name, restaurant_path(restaurant), 
          class: "text-dark text-decoration-none" %>
    </h5>
    
    <div class="card-text flex-grow-1">
      <p class="text-muted mb-2">
        <small>
          <i class="fas fa-utensils me-1"></i><%= restaurant.genre.name %><br>
          <i class="fas fa-map-marker-alt me-1"></i><%= restaurant.address %><br>
          <i class="fas fa-clock me-1"></i>
          <%= restaurant.business_open_hours %>〜<%= restaurant.business_close_hours %>
        </small>
      </p>
    </div>
    
    <div class="card-footer bg-transparent border-0 p-0">
      <span class="badge bg-info me-1">
        ¥<%= restaurant.min_price %>〜<%= restaurant.max_price %>
      </span>
      <% if restaurant.parking_lot %>
        <span class="badge bg-success">駐車場あり</span>
      <% end %>
    </div>
  </div>
</div>